<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.QQRobot.demo.dao.ConfigMapper">

    <sql id="insertFields">
        keyword,content,come_from,create_time
    </sql>
    
    <sql id="selectFields">
        id,keyword,content,come_from,create_time
    </sql>

    <select id="selectConfigDataByKeyword" resultType="ConfigData">
        select <include refid="selectFields"></include>
        from config
        where keyword = #{keyword}
        and come_from = #{comeFrom}
    </select>

    <insert id="insertConfigData" parameterType="ConfigData" keyProperty="id" >
        insert into config (<include refid="insertFields"></include>)
        values(#{keyword},#{content},#{comeFrom},#{createTime})
    </insert>

    <update id="updateConfigData">
        update config set content = #{content}
        where come_from = #{comeFrom}
        and keyword = #{keyword}
    </update>


</mapper>